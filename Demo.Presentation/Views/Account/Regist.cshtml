@using Demo.Presentation.ViewModels.Identity
@model RegisterViewModel
@{
	ViewData["Title"] = "Register";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<!-- main -->
<div class="main-w3layouts wrapper">
	<h1>Creative SignUp Form</h1>
	<div class="main-agileinfo">
		<div class="agileits-top">
			<form asp-controller="Account" asp-action="Regist" method="post">
				<div asp-validation-summary="ModelOnly"></div>
				<input asp-for="Username" placeholder="User name">
				<span asp-validation-for="Username" class="text-danger"></span>
				<br />
				<input asp-for="FirstName" placeholder="First name">
				<span asp-validation-for="FirstName" class="text-danger"></span>
				<br />
				<input asp-for="LastName" placeholder="Last name">
				<span asp-validation-for="LastName" class="text-danger"></span>
				<br />
				<input asp-for="Email" placeholder="Email">
				<span asp-validation-for="Email" class="text-danger"></span>
				<br />
				<input asp-for="Password" placeholder="Password">
				<span asp-validation-for="Password" class="text-danger"></span>
				<br />
				<input asp-for="ConfirmPassword" placeholder="Confirm Password">
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				<br />
				<div class="wthree-text">
					<label class="anim">
						<input asp-for="IsAgreed" class="checkbox">
						<span>I Agree To The Terms & Conditions</span>
					</label>
					<div class="clear"> </div>
				</div>
				<input type="submit" value="SIGNUP">
			</form>
			<p>Have an Account? <a asp-action="Login"> Login Now!</a></p>
		</div>
	</div>
	<!-- copyright -->
	<div class="colorlibcopy-agile">
		<p>© 2018 Colorlib Signup Form. All rights reserved | Design by <a href="https://colorlib.com/" target="_blank">Colorlib</a></p>
	</div>
	<!-- //copyright -->
	<ul class="colorlib-bubbles">
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
	</ul>
</div>
<!-- //main -->
